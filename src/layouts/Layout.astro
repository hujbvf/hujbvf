---
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";

import "../styles/global.css";

interface Props {
  title: string;
  description: string;
  index: boolean;
}

const { title, description, index } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <Head title={title} description={description} index={index} />
  </head>
  <body ontouchend="">
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    margin: var(--big-padding) 0;
  }
</style>
